
global pid = 0;
global llamada = "";
global nombre = "";
global size = 0;
global tiempo = 0;
probe syscall.mmap2 {
        llamada = name;
        pid = pid();
        nombre = execname();
        size = length;
        tiempo =  gettimeofday_s();
}

probe syscall.munmap {
        llamada = name;
        pid = pid();
        nombre = execname();
        size = length;
        tiempo =  gettimeofday_s();
} 


probe timer.ms(100){
        if(pid != 0 ){
                printf("Type= %s PID= %d name= %s size= %d date= %d \n",llamada,pid ,nombre,size,tiempo);
        }
}

